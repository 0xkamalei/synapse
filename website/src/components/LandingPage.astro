<style>
  .landing-page {
    background: var(--md-surface);
    color: var(--md-on-surface);
  }

  .container-landing {
    max-width: 960px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  /* Hero Section */
  .hero-section {
    padding: var(--space-16) 0 var(--space-12);
    text-align: center;
  }

  .logo-large {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
  }

  .logo-icon-bg {
    font-size: 4.5rem;
    color: var(--md-primary);
    background: var(--md-primary-container);
    padding: var(--space-6);
    border-radius: 32px;
    font-variation-settings: 'FILL' 1, 'wght' 400;
  }

  .logo-large h1 {
    font-size: 3rem;
    font-weight: 500;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .hero-headline {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--space-6);
    color: var(--md-on-surface);
    letter-spacing: -0.01em;
  }

  @media (max-width: 768px) {
    .hero-headline {
      font-size: 2.5rem;
    }
  }

  .hero-subheadline {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--md-on-surface-variant);
    max-width: 720px;
    margin: 0 auto var(--space-8);
  }

  .hero-actions {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-full);
    font-weight: 600;
    transition: all 0.2s;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--md-primary);
    color: var(--md-on-primary);
  }

  .btn-primary:hover {
    background: var(--md-on-primary-container);
    color: var(--md-primary-container);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .btn-icon {
    width: 20px;
    height: 20px;
  }

  /* Platforms Section */
  .platforms-section {
    padding: var(--space-12) 0;
    background: var(--md-surface-container-low);
    text-align: center;
  }

  .section-label {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--md-primary);
    margin-bottom: var(--space-8);
  }

  .platform-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-8);
  }

  .platform-item {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--md-on-surface-variant);
    opacity: 0.8;
  }

  /* Value Section */
  .value-section {
    padding: var(--space-16) 0;
  }

  .value-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-8);
  }

  .value-card {
    background: var(--md-surface-container);
    padding: var(--space-8);
    border-radius: 24px;
    text-align: left;
    border: 1px solid var(--md-outline-variant);
    transition: transform 0.2s;
  }

  .value-card:hover {
    transform: translateY(-4px);
  }

  .value-card .material-symbols-outlined {
    font-size: 2.5rem;
    color: var(--md-secondary);
    margin-bottom: var(--space-4);
  }

  .value-card h4 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--space-3);
    color: var(--md-on-surface);
  }

  .value-card p {
    line-height: 1.6;
    color: var(--md-on-surface-variant);
  }

  .landing-footer {
    padding: var(--space-12) 0;
    text-align: center;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
  }

  .footer-link {
    color: var(--md-on-surface-variant);
    opacity: 0.6;
    transition: opacity 0.2s, color 0.2s;
  }

  .footer-link:hover {
    opacity: 1;
    color: var(--md-primary);
  }

  .footer-icon {
    width: 24px;
    height: 24px;
  }
</style>
