{
  "manifest_version": 3,
  "name": "Synapse Collector",
  "version": "1.0.0",
  "description": "Aggregate your thoughts from X.com, Bilibili, Weibo, QZone, Redbook and ZSXQ to Notion",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.bilibili.com/*",
    "https://space.bilibili.com/*",
    "https://weibo.com/*",
    "https://www.weibo.com/*",
    "https://m.weibo.com/*",
    "https://api.notion.com/*",
    "https://api.github.com/*",
    "https://*.qzone.qq.com/*",
    "https://user.qzone.qq.com/*",
    "https://www.xiaohongshu.com/*",
    "https://wx.zsxq.com/*",
    "https://*.zsxq.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background/service-worker.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "dist/content/x-collector.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.bilibili.com/*",
        "https://space.bilibili.com/*"
      ],
      "js": [
        "dist/content/bilibili-collector.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.qzone.qq.com/*",
        "https://user.qzone.qq.com/*"
      ],
      "js": [
        "dist/content/qzone-collector.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://weibo.com/*",
        "https://www.weibo.com/*",
        "https://m.weibo.com/*"
      ],
      "js": [
        "dist/content/weibo-collector.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.xiaohongshu.com/*"
      ],
      "js": [
        "dist/content/redbook-collector.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://wx.zsxq.com/*",
        "https://*.zsxq.com/*"
      ],
      "js": [
        "dist/content/zsxq-collector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}