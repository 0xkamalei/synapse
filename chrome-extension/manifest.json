{
  "manifest_version": 3,
  "name": "Synapse Collector",
  "version": "1.0.0",
  "description": "Aggregate your thoughts from X.com and Bilibili to Notion",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://www.bilibili.com/*",
    "https://space.bilibili.com/*",
    "https://api.notion.com/*",
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content/x-collector.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.bilibili.com/*",
        "https://space.bilibili.com/*"
      ],
      "js": [
        "content/bilibili-collector.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  }
}